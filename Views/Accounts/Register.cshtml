@{
    ViewData["Title"] = "Register";
    var role = Context.Request.Query["role"].ToString();
}

<div class="container register-page mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card register-card shadow-sm border-0 rounded-4 p-4">
                <h3 class="register-title text-center mb-4">Register</h3>

                <div class="d-flex justify-content-center mb-4 register-toggle">
                    <button id="jobSeekerBtn" class="btn btn-primary me-2 jobseeker-btn @(role == "Employer" ? "" : "active")">Job Seeker</button>
                    <button id="employerBtn" class="btn btn-outline-primary employer-btn @(role == "Employer" ? "active" : "")">Employer</button>
                </div>

                <!-- Job Seeker Form -->
                <form id="jobSeekerForm" class="register-form @(role == "Employer" ? "d-none" : "")"
                      method="post"
                      enctype="multipart/form-data"
                      asp-controller="Accounts"
                      asp-action="RegisterJobSeeker">
                    <h5 class="register-section-title mb-3">Required Information</h5>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input type="text" class="form-control" name="FirstName" placeholder="Enter your first name" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input type="text" class="form-control" name="LastName" placeholder="Enter your last name" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email" placeholder="Enter your email" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input type="tel" class="form-control" name="Phone" placeholder="Enter your phone number" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" name="Password" placeholder="Enter password" required>
                    </div>

                    <h5 class="register-section-title mt-4 mb-3">Optional Info</h5>

                    <div class="mb-3">
                        <label class="form-label">LinkedIn</label>
                        <input type="url" class="form-control" name="LinkedIn" placeholder="LinkedIn Profile (Optional)">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">GitHub</label>
                        <input type="url" class="form-control" name="GitHub" placeholder="Github (Optional)">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Skills</label>
                        <input type="text" class="form-control" name="Skills" placeholder="Your skills">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Experience</label>
                        <input type="number" class="form-control" name="ExperienceYears" placeholder="Years of experience">
                    </div>
                    <div class="mb-3">
                        <label for="resume" class="form-label">Resume</label>
                        <input type="file" class="form-control register-input" id="resume" name="ResumeFile" accept=".pdf,.doc,.docx">
                    </div>


                    <button type="submit" class="btn btn-primary w-100 register-jobseeker-btn">Register</button>
                </form>
                <!-- Employer Form -->
                <form id="employerForm"
                      class="register-form @(role == "Employer" ? "" : "d-none")"
                      method="post"
                      enctype="multipart/form-data"
                      asp-controller="Accounts"
                      asp-action="RegisterEmployer">

                    <h5 class="register-section-title mb-3">Required Information</h5>

                    <div class="mb-3">
                        <label for="emName" class="form-label">Company Name</label>
                        <input type="text" class="form-control register-input"
                               id="emName" name="CompanyName" placeholder="Enter your company name" required>
                    </div>

                    <div class="mb-3">
                        <label for="emEmail" class="form-label">Email</label>
                        <input type="email" class="form-control register-input"
                               id="emEmail" name="Email" placeholder="Enter your email" required>
                    </div>

                    <div class="mb-3">
                        <label for="emPassword" class="form-label">Password</label>
                        <input type="password" class="form-control register-input"
                               id="emPassword" name="Password" placeholder="Enter your password" required>
                    </div>

                    <div class="mb-3">
                        <label for="emPhone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control register-input"
                               id="emPhone" name="Phone" placeholder="Enter company phone number" required>
                    </div>

                    <div class="mb-3">
                        <label for="emLocation" class="form-label">Location / City</label>
                        <input type="text" class="form-control register-input"
                               id="emLocation" name="Location" placeholder="Enter company location" required>
                    </div>

                    <div class="mb-3">
                        <label for="emSize" class="form-label">Company Size</label>
                        <select id="emSize" name="CompanySize" class="form-select register-input" required>
                            <option value="">Select size</option>
                            <option>1–10 employees</option>
                            <option>11–50 employees</option>
                            <option>51–200 employees</option>
                            <option>200+ employees</option>
                        </select>
                    </div>

                    <h5 class="register-section-title mt-4 mb-3">Optional Information</h5>

                    <div class="mb-3">
                        <label for="emWebsite" class="form-label">Company Website</label>
                        <input type="url" class="form-control register-input"
                               id="emWebsite" name="Website" placeholder="Enter website URL">
                    </div>

                    <div class="mb-3">
                        <label for="emIndustry" class="form-label">Industry / Sector</label>
                        <input type="text" class="form-control register-input"
                               id="emIndustry" name="Industry" placeholder="e.g. IT, Finance, Marketing">
                    </div>

                    <div class="mb-3">
                        <label for="emAbout" class="form-label">Company Description</label>
                        <textarea id="emAbout" name="Description"
                                  class="form-control register-input" rows="3"
                                  placeholder="Write a short company description"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="emLinkedIn" class="form-label">LinkedIn Page</label>
                        <input type="url" class="form-control register-input"
                               id="emLinkedIn" name="LinkedInCompany" placeholder="Enter LinkedIn URL">
                    </div>

                    <div class="mb-3">
                        <label for="emLogo" class="form-label">Company Logo (optional)</label>
                        <input type="file" class="form-control register-input"
                               id="emLogo" name="LogoFile" accept="image/*">
                    </div>

                    <button type="submit" class="btn btn-success w-100 mt-3 register-employer-btn">
                        Register as Employer
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Success</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="successModalBody">
            </div>

            <div class="modal-footer">
                <button class="btn btn-success" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="errorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Error</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="errorModalBody">
            </div>

            <div class="modal-footer">
                <button class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/register.js"></script>
}
